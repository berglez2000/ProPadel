---
// Contact Component
---

<section id="contact" class="section-padding bg-gray-50">
    <div class="container-max">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl font-bold text-secondary mb-4">Get in Touch</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Ready to start your Padel journey? Contact us for more information, lessons, or equipment
            </p>
        </div>
        
        <div class="grid-12">
            <div class="col-span-12 lg:col-span-6" data-aos="fade-right">
                <div class="card p-8">
                    <h3 class="text-2xl font-bold text-secondary mb-6">Contact Information</h3>
                    <div class="space-y-6">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mr-4">
                                <i class="fas fa-map-marker-alt text-xl text-secondary"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-secondary">Address</h4>
                                <p class="text-gray-600">123 Padel Street, Sports District<br>City, State 12345</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mr-4">
                                <i class="fas fa-phone text-xl text-secondary"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-secondary">Phone</h4>
                                <p class="text-gray-600">+1 (555) 123-4567</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mr-4">
                                <i class="fas fa-envelope text-xl text-secondary"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-secondary">Email</h4>
                                <p class="text-gray-600">info@padelworld.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-span-12 lg:col-span-6" data-aos="fade-left">
                <div class="card p-8">
                    <h3 class="text-2xl font-bold text-secondary mb-6">Send us a Message</h3>
                    <form class="space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-secondary mb-2">First Name</label>
                                <input type="text" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-secondary mb-2">Last Name</label>
                                <input type="text" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-secondary mb-2">Email</label>
                            <input type="email" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-secondary mb-2">Subject</label>
                            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                                <option>Select a subject</option>
                                <option>General Inquiry</option>
                                <option>Booking Information</option>
                                <option>Equipment Questions</option>
                                <option>Lessons & Training</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-secondary mb-2">Message</label>
                            <textarea rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                        </div>
                        <button type="submit" class="btn-primary w-full py-3">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
