---
import { getEntry } from 'astro:content';
import { getLangFromUrl } from '../i18n/config';

// Get current language
const lang = getLangFromUrl(Astro.url);

// Get footer content from markdown based on language
const footer = await getEntry(`${lang}/footer`, 'footer');
---

<footer class="padel-blue-bg text-white py-12">
    <div class="container-max px-4">
        <div class="grid-12">
            <div class="col-span-12 md:col-span-6 mb-8 md:mb-0">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center mr-3">
                        <span class="text-secondary font-bold text-xl">P</span>
                    </div>
                    <span class="text-2xl font-bold">{footer.data.title}</span>
                </div>
                <p class="text-gray-300 mb-4">
                    {footer.data.description}
                </p>
                <div class="flex space-x-4">
                    {footer.data.socialLinks.map((social) => (
                        <a href={social.url} class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition-colors">
                            <i class={`fab fa-${social.icon} text-lg`}></i>
                        </a>
                    ))}
                </div>
            </div>
            
            <div class="col-span-12 md:col-span-6 mb-8 md:mb-0">
                <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
                <p class="text-gray-300 mb-4">
                    Get in touch with us for more information about padel courts, equipment, and training programs.
                </p>
                <div class="flex space-x-4">
                    <a href="mailto:info@padel.com" class="text-gray-300 hover:text-primary transition-colors">
                        <i class="fas fa-envelope mr-2"></i>info@padel.com
                    </a>
                    <a href="tel:+1234567890" class="text-gray-300 hover:text-primary transition-colors">
                        <i class="fas fa-phone mr-2"></i>+1 (234) 567-890
                    </a>
                </div>
            </div>
        </div>
        
        <div class="border-t border-gray-700 mt-8 pt-8 text-center">
            <p class="text-gray-300">{footer.data.copyright}</p>
        </div>
    </div>
</footer>